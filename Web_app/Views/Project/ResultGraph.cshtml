@{
    var chart = new Chart(width: 700, height: 400)
            .AddTitle("Графік окупності")
            .AddSeries(
                    name: "Осмос + Na-кат",
                    chartType: "Line",
                    xValue: new[] { "0", "1", "2", "3", "4", "5" },
                    yValues: ViewBag.ReportMoneyYearRO.Split("-"[0]))
            .AddSeries(
                    name: "2 ст. Na-кат",
                    chartType: "Line",
                    xValue: new[] { "0", "1", "2", "3", "4", "5" },
                    yValues: ViewBag.ReportMoneyYearIX.Split("-"[0]))
            .AddLegend()
            .SetXAxis(
                title: "Роки",
                min: 1,
                max: 6)
            .SetYAxis(
                title: "Витрати на водопідготовку (включаючи капітальні), грн")
            .Write("png");
}

